{
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=8.0",
    "psr/http-message": "^1.0",
    "roave/security-advisories": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Framework\\": "src/Framework/",
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "serve": "php -S localhost:8080 -t public public/index.php",
    "test": "phpunit --colors=always"
  }
}
